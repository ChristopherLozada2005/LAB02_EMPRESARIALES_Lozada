<Window x:Class="WpfLAB02_B.ReporteIngresos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLAB02_B"
        mc:Ignorable="d"
        Title="ReporteIngresos" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Formulario ingreso -->
            <RowDefinition Height="Auto"/>
            <!-- Filtros -->
            <RowDefinition Height="*"/>
            <!-- Tabla -->
        </Grid.RowDefinitions>

        <!-- 📌 Formulario de Registro -->
        <GroupBox Header="Nuevo Ingreso" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Fecha:" Width="100"/>
                    <DatePicker x:Name="dpFecha" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Placa:" Width="100"/>
                    <TextBox x:Name="txtPlaca" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Turno:" Width="100"/>
                    <TextBox x:Name="txtTurno" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Conductor:" Width="100"/>
                    <TextBox x:Name="txtConductor" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Producto:" Width="100"/>
                    <TextBox x:Name="txtProducto" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Peso:" Width="100"/>
                    <TextBox x:Name="txtPeso" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Transporte:" Width="100"/>
                    <TextBox x:Name="txtTransporte" Width="200"/>
                </StackPanel>
                <Button Content="Guardar" Width="120" Height="35" Margin="0,10,0,0"
                        Click="BtnGuardar_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- 📌 Filtros de búsqueda -->
        <GroupBox Header="Buscar Ingresos" Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Fecha Inicio:" Width="100"/>
                    <DatePicker x:Name="dpFechaInicio" Width="200"/>
                    <Label Content="Fecha Fin:" Width="100" Margin="20,0,0,0"/>
                    <DatePicker x:Name="dpFechaFin" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Placa:" Width="100"/>
                    <TextBox x:Name="txtFiltroPlaca" Width="200"/>
                    <Label Content="Conductor:" Width="100" Margin="20,0,0,0"/>
                    <TextBox x:Name="txtFiltroConductor" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Producto:" Width="100"/>
                    <TextBox x:Name="txtFiltroProducto" Width="200"/>
                </StackPanel>
                <Button Content="Buscar" Width="120" Height="35" Margin="0,10,0,0"
                        Click="BtnBuscar_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- 📌 Tabla de Ingresos -->
        <DataGrid x:Name="dgIngresos" Grid.Row="2" AutoGenerateColumns="True"
                  CanUserAddRows="False" IsReadOnly="True"/>
    </Grid>
</Window>

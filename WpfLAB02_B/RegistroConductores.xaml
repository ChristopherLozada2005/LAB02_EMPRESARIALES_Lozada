<Window x:Class="WpfLAB02_B.RegistroConductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLAB02_B"
        mc:Ignorable="d"
        Title="RegistroConductores" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Formulario -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Nombre Conductor:" Width="150"/>
                <TextBox x:Name="txtNombre" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Licencia:" Width="150"/>
                <TextBox x:Name="txtLicencia" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Transporte:" Width="150"/>
                <TextBox x:Name="txtTransporte" Width="300"/>
            </StackPanel>
            <Button Content="Guardar" Width="120" Height="35" Margin="0,10,0,0"
                    HorizontalAlignment="Left" Click="BtnGuardar_Click"/>
        </StackPanel>

        <!-- Tabla de Conductores -->
        <DataGrid x:Name="dgConductores" Grid.Row="1" AutoGenerateColumns="True"
                  CanUserAddRows="False" IsReadOnly="True"/>
    </Grid>
</Window>

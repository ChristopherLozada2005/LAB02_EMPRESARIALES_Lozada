        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLAB02_B"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Button x:Name="btnOperaciones" Content="Operaciones" Height="40" Click="btnOperaciones_Click"/>
            <Button x:Name="btnMantenimientos" Content="Mantenimientos" Height="40" Click="btnMantenimientos_Click"/>
            <Button x:Name="btnReportes" Content="Reportes" Height="40" Click="btnReportes_Click"/>
        </StackPanel>
    </Grid>
</Window>
